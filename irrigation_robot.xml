<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="irrigation_bot">

  <!--
    Irrigation Bot (XACRO)
    - Good-looking, modular 3D model placeholders (replace meshes/ with your meshes)
    - Wheeled base, articulated boom (2-DOF), tank, spray nozzle, lidar & camera
    - Designed for RViz/Gazebo visualization and easy mesh swaps
  -->

  <xacro:property name="prefix" value=""/>
  <xacro:property name="base_mass" value="12.0"/>
  <xacro:property name="wheel_mass" value="1.0"/>
  <xacro:property name="boom_mass" value="2.0"/>

  <!-- Materials -->
  <material name="mat_body">
    <color rgba="0.15 0.45 0.35 1.0"/>
  </material>
  <material name="mat_tank">
    <color rgba="0.9 0.9 0.95 1.0"/>
  </material>
  <material name="mat_black">
    <color rgba="0.05 0.05 0.05 1.0"/>
  </material>
  <material name="mat_orange">
    <color rgba="0.95 0.45 0.15 1.0"/>
  </material>

  <!-- Base link -->
  <link name="${prefix}base_link">
    <visual>
      <geometry>
        <mesh filename="package://my_robot_description/meshes/base_plate.dae"/>
      </geometry>
      <origin xyz="0 0 0.05" rpy="0 0 0"/>
      <material name="mat_body"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.45 0.1"/>
      </geometry>
      <origin xyz="0 0 0.05"/>
    </collision>
    <inertial>
      <mass value="${base_mass}"/>
      <origin xyz="0 0 0.05"/>
      <inertia ixx="0.6" iyy="0.6" izz="0.8" ixy="0" ixz="0" iyz="0"/>
    </inertial>
  </link>

  <!-- Wheels (differential) -->
  <link name="${prefix}left_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.12" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="mat_black"/>
    </visual>
  </link>

  <link name="${prefix}right_wheel">
    <visual>
      <geometry>
        <cylinder radius="0.12" length="0.05"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.5708 0 0"/>
      <material name="mat_black"/>
    </visual>
  </link>

  <!-- Wheel joints -->
  <joint name="${prefix}left_wheel_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}left_wheel"/>
    <origin xyz="0.18 0.23 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="${prefix}right_wheel_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}right_wheel"/>
    <origin xyz="0.18 -0.23 -0.05" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <!-- Castor (visual only) -->
  <link name="${prefix}caster">
    <visual>
      <geometry>
        <sphere radius="0.05"/>
      </geometry>
      <origin xyz="-0.25 0  -0.07"/>
      <material name="mat_black"/>
    </visual>
  </link>
  <joint name="${prefix}caster_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}caster"/>
    <origin xyz="-0.25 0 -0.07"/>
  </joint>

  <!-- Water tank -->
  <link name="${prefix}tank">
    <visual>
      <geometry>
        <mesh filename="package://my_robot_description/meshes/tank.dae"/>
      </geometry>
      <origin xyz="0 0 0.12"/>
      <material name="mat_tank"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.12" length="0.25"/>
      </geometry>
      <origin xyz="0 0 0.12"/>
    </collision>
    <inertial>
      <mass value="6.0"/>
      <origin xyz="0 0 0.12"/>
      <inertia ixx="0.1" iyy="0.1" izz="0.15"/>
    </inertial>
  </link>

  <joint name="${prefix}tank_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}tank"/>
    <origin xyz="0 0 0.12"/>
  </joint>

  <!-- Boom: shoulder (pan) -->
  <link name="${prefix}boom_base">
    <visual>
      <geometry>
        <mesh filename="package://my_robot_description/meshes/boom_base.dae"/>
      </geometry>
      <origin xyz="0.1 0 0.18"/>
      <material name="mat_orange"/>
    </visual>
    <inertial>
      <mass value="${boom_mass}"/>
      <origin xyz="0.1 0 0.18"/>
    </inertial>
  </link>

  <joint name="${prefix}boom_pan_joint" type="revolute">
    <parent link="${prefix}tank"/>
    <child link="${prefix}boom_base"/>
    <origin xyz="0 0 0.18" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Boom: elbow (tilt) -->
  <link name="${prefix}boom_link">
    <visual>
      <geometry>
        <mesh filename="package://my_robot_description/meshes/boom_arm.dae"/>
      </geometry>
      <origin xyz="0.35 0 0.0" rpy="0 0 0"/>
      <material name="mat_body"/>
    </visual>
    <inertial>
      <mass value="1.5"/>
    </inertial>
  </link>

  <joint name="${prefix}boom_tilt_joint" type="revolute">
    <parent link="${prefix}boom_base"/>
    <child link="${prefix}boom_link"/>
    <origin xyz="0.18 0 0.0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.0" upper="1.0" effort="8" velocity="1.0"/>
  </joint>

  <!-- Nozzle (sprayer) -->
  <link name="${prefix}nozzle">
    <visual>
      <geometry>
        <mesh filename="package://my_robot_description/meshes/nozzle.dae"/>
      </geometry>
      <origin xyz="0.7 0 0.02" rpy="0 0 0"/>
      <material name="mat_black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.06"/>
      </geometry>
      <origin xyz="0.7 0 0.02"/>
    </collision>
  </link>

  <joint name="${prefix}nozzle_joint" type="fixed">
    <parent link="${prefix}boom_link"/>
    <child link="${prefix}nozzle"/>
    <origin xyz="0.7 0 0.02"/>
  </joint>

  <!-- Sensors: lidar and camera -->
  <link name="${prefix}lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.02"/>
      </geometry>
      <origin xyz="0.25 0 0.28" rpy="1.5708 0 0"/>
      <material name="mat_black"/>
    </visual>
  </link>
  <joint name="${prefix}lidar_joint" type="fixed">
    <parent link="${prefix}boom_base"/>
    <child link="${prefix}lidar_link"/>
    <origin xyz="0.25 0 0.28"/>
  </joint>

  <link name="${prefix}camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.03"/>
      </geometry>
      <origin xyz="0.25 0 0.30"/>
      <material name="mat_black"/>
    </visual>
  </link>
  <joint name="${prefix}camera_joint" type="fixed">
    <parent link="${prefix}boom_base"/>
    <child link="${prefix}camera_link"/>
    <origin xyz="0.25 0 0.30"/>
  </joint>

  <!-- Simple transmission placeholders for wheels (for controllers) -->
  <transmission name="left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}left_wheel_joint"/>
    <actuator name="left_wheel_motor"/>
  </transmission>

  <transmission name="right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="${prefix}right_wheel_joint"/>
    <actuator name="right_wheel_motor"/>
  </transmission>

  <!-- Useful TF frames for visualization and controllers -->
  <link name="${prefix}odom"/>
  <joint name="${prefix}odom_to_base" type="fixed">
    <parent link="${prefix}odom"/>
    <child link="${prefix}base_link"/>
    <origin xyz="0 0 0"/>
  </joint>

  <!-- User notes: replace meshes in package://my_robot_description/meshes/ with high-quality .dae/.stl files
       e.g. base_plate.dae, tank.dae, boom_arm.dae, nozzle.dae. For best visuals use textured COLLADA (.dae).
  -->

</robot>
